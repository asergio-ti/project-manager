{
  "name": "project-manager-server",
  "version": "1.0.0",
  "description": "Servidor para o Project Manager",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm index.ts",
    "dev": "nodemon --experimental-specifier-resolution=node --exec node --loader ts-node/esm index.ts"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
} 